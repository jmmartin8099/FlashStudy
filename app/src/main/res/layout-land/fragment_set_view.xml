<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background"
    android:orientation="vertical"
    tools:context="com.example.jmmar.flashstudy.SetViewFragment">

    <TextView
        android:id="@+id/view_set_title"
        android:text="Set Name"
        android:textColor="@color/colorBlack"
        style="@style/title_theme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

    <Button
        android:id="@+id/button_begin_studying"
        style="@style/red_button_white"
        android:text="Begin Studying"
        android:textSize="25dp"
        android:layout_weight=".25"/>

    <Button
        style="@style/blue_button_white"
        android:text="add cards"
        android:textSize="25dp"
        android:id="@+id/button_add_cards"
        android:layout_weight=".25"/>

    <Button
        android:id="@+id/button_edit_set"
        android:text="edit set"
        android:textSize="25dp"
        style="@style/green_button_white"
        android:layout_weight=".25"/>

    <Button
        android:id="@+id/button_delete_set"
        android:text="delete set"
        android:textSize="25dp"
        style="@style/yellow_button_white"
        android:layout_weight=".25"/>

        </LinearLayout>

</LinearLayout>
