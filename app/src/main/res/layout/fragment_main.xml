<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jmmar.flashstudy.MainFragment"
    android:background="@color/colorLightBrown"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main_activity_title"
        style="@style/title_theme"
        android:text="Flash Study" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".2"/>

    <Button
        android:id="@+id/begin_studying"
        style="@style/default_button_theme"
        android:text="Begin Studying"
        android:onClick="beginStudying"
        android:layout_weight=".1"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".2"/>

    <Button
        style="@style/default_button_theme"
        android:text="add cards"
        android:id="@+id/add_cards"
        android:onClick="openAddCardsFrag"
        android:layout_weight=".1"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".2"/>

    <Button
        android:id="@+id/edit_set"
        android:text="edit set"
        style="@style/default_button_theme"
        android:onClick="openEditSetFrag"
        android:layout_weight=".1"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".2"/>

</LinearLayout>
